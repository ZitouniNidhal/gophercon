    "version": "0.2.0",
    "configurations": [
        {
            "name": "Start Adventure",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}",
            "hideSystemGoroutines": true,
            "goroutineFilters": "-without startloc net/http.(*conn).serve",
            "serverReadyAction": {
                "action": "openExternally",             
            },
        },
        {
            "name": "Monkey",
            "type": "go",
            "request": "attach",
            "mode": "local",
            "processId": "monkey",
        },
    ]
}